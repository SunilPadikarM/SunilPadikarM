@model List<HotelReservation.Models.TransactionSummary>
@{
    ViewBag.Title = "TransactionSummary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function() {
        $('#TransactionSummary').DataTable();
} );
</script>
<h2>Transaction Summary</h2>
<body background="http://sipsavorlodi.com/wp-content/uploads/2018/09/31-white-background-hd-high-resolution-desktop-wallpaper-download-plain-background-hd-images-home-wallpaper.jpg">
    <style>
        body {
            text-align: center;
            background-repeat: no-repeat;
            background-size: cover
        }
    </style>
    <div class="container">
        <table id="TransactionSummary" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td>
                        Transaction Number
                    </td>
                    <td>
                        Name On Card
                    </td>
                    <td>
                        Card Number
                    </td>
                    <td>
                        Card Type
                    </td>
                    <td>
                        Quantity
                    </td>
                    <td>
                        Price
                    </td>
                    <td>
                        Total Price
                    </td>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameOnCard)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CardNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CardType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.qty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalPrice)
                        </td>
                    </tr>

                </tbody>
               
            }
        </table>
    </div>
    </body>